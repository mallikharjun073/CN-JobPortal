<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Add New Job <%=job.id %></span></h1>
        </div>
 
        <form action="/jobs/<%=job.id%>?_method=PUT" method="post">
            <div class="input-group mb-3">
              <select 
                required
                name="job_category"
                class="form-select"
                aria-label="Default select example"
              >
                <option selected disabled>select job category</option>
                <option value="Tech" <%= job.jobcategory.includes('Tech') ? 'selected' : ''%>>Tech</option>
                <option value="Non-Tech" <%= job.jobcategory.includes('Non Tech') ? 'selected' : ''%>>Non Tech</option>
              </select>
            </div>
        
            <div class="input-group mb-3">
              <select
                required
                name="job_designation"
                class="form-select"
                aria-label="Default select example"
              >
                <option selected disabled>select job designation</option>
                <option  value="HR" <%= job.jobdesignation.includes('HR') ? 'selected' : ''%>>HR</option>
                <option  value="SDE" <%= job.jobdesignation.includes('HR') ? 'selected' : ''%>>SDE</option>
                <option value="DevOps"  <%= job.jobdesignation.includes('DevOps') ? 'selected' : ''%>>DevOps</option>
                <option  value="MERN Developer" <%= job.jobdesignation.includes('MERN Developer') ? 'selected' : ''%>>MERN Developer</option>
                <option  value="MEAN Developer" <%= job.jobdesignation.includes('MEAN Developer') ? 'selected' : ''%>>MEAN Developer</option>
                <option  value="JAVA Developer" <%= job.jobdesignation.includes('JAVA Developer') ? 'selected' : ''%>>JAVA Developer</option>
                <option  value="Front-End Developer" <%= job.jobdesignation.includes('Front-End Developer') ? 'selected' : ''%>>Front-End Developer</option>
                <option  value="Back-End Developer" <%= job.jobdesignation.includes('Back-End Developer') ? 'selected' : ''%>>Back-End Developer</option>
                <option  value="Full-Stack Developer" <%= job.jobdesignation.includes('Full-Stack Developer') ? 'selected' : ''%>>Full-Stack Developer</option>
              </select>
            </div>
            <div class="mb-3">
                <label for="basic-url" class="form-label">Enter job location</label>
                <div class="input-group">
                  <input
                    required
                    name="job_location"
                    type="text"
                    class="form-control"
                    id="basic-url"
                    value="<%=job.location %>"
                    aria-describedby="basic-addon3 basic-addon4"
                  />
                </div>
              </div>
          
              <div class="input-group mb-3">
                <span class="input-group-text">Company Name</span>
                <input
                  required
                  name="company_name"
                  type="text"
                  class="form-control"
                  value="<%=job.companyname %>"
                  aria-label="Amount (to the nearest dollar)"
                />
              </div>
          
              <div class="input-group mb-3">
                <input
                  required
                  name="salary"
                  type="text"
                  class="form-control"
                  placeholder="enter salary"
                  aria-label="Username"
                  value="<%=job.salary %>"
                />
                <span class="input-group-text">Total Positions</span>
                <input
                  required
                  name="number_of_openings"
                  type="number"
                  class="form-control"
                  placeholder="total no of openings"
                  aria-label="Server"
                  value="<%=job.numberofopenings %>"
                />
              </div>
              <div class="input-group mb-3">
                <select  required
                  multiple
                  name="skills_required"
                  class="form-select"
                  aria-label="Default select example"
                >
                  <option selected disabled>select skills required for this job</option>
                  <option value="React" <%= job.skillsrequired.includes('React') ? 'selected' : ''%>>React</option>
                  <option value="NodeJs"  <%= job.skillsrequired.includes('NodeJs') ? 'selected' : ''%>>NodeJs</option>
                  <option value="Angular"  <%= job.skillsrequired.includes('Angular') ? 'selected' : ''%>>Angular</option>
                  <option value="MongoDB"  <%= job.skillsrequired.includes('MongoDB') ? 'selected' : ''%>>MongoDB</option>
                  <option value="SQL"  <%= job.skillsrequired.includes('SQL') ? 'selected' : ''%>>SQL</option>
                  <option value="Express"  <%= job.skillsrequired.includes('Express') ? 'selected' : ''%>>Express</option>
                  <option value="Java"  <%= job.skillsrequired.includes('Java') ? 'selected' : ''%>>Java</option>
                  <option value="SpringBoot"  <%= job.skillsrequired.includes('SpringBoot') ? 'selected' : ''%>>SpringBoot</option>
                  <option value="C++"  <%= job.skillsrequired.includes('C') ? 'selected' : ''%>>C++</option>
                  <option value="Data Structures & Algo">Data Structures & Algo</option>
                </select>
               
              </div>
              <div class="mb-3"> 
                    <label for="basic-url" class="form-label">Apply By</label>
                <input
                  name="apply_by"
                  type="date"
                  class="form-control"
                  placeholder="total no of openings"
                  aria-label="Server"
                  value="<%=job.applyby %>"
                />
              </div>
              <button class="w-100 mb-3 mt-2 btn btn-md btn-success" type="submit">
                Update
              </button>
            </form>
    </div>
</section>