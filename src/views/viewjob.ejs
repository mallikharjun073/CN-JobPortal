
<section class="py-5">
    <div class="container px-5 mb-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Job Details</span></h1>
        </div>
         
        <div class="card">
            <div class="card-header"><%=job.jobdesignation %> oppertunity in <%=job.jobcategory %> at <%=job.companyname %></div>
            <div class="card-body">
                
              
              <dl class="row">
                <dt class="col-sm-3">Company Name</dt>
                <dd class="col-sm-9"><%=job.companyname %></dd>
              
                <dt class="col-sm-3">Job Description</dt>
                <dd class="col-sm-9"> <p><%=job.jobdesignation %></p> </dd>
              
                <dt class="col-sm-3">Job category</dt>
                <dd class="col-sm-9"> <%=job.jobcategory %></dd>
              
                <dt class="col-sm-3 text-truncate">Location</dt>
                <dd class="col-sm-9">This can be useful when space is tight. Adds an ellipsis at the end.</dd>
              
                <dt class="col-sm-3">salary</dt>
                <dd class="col-sm-9">
                    <%=job.salary %>
                </dd>
                <dt class="col-sm-3">Skills required</dt>
                <dd class="col-sm-9">
                    <%=job.skillsrequired %>
                </dd>
                <dt class="col-sm-3">Aapplicants</dt>
                <dd class="col-sm-9">
                   <a class="btn btn-secondary text-white" href="/jobs/<%=job.id %>/applicants"><%= job.applicants.length %></a>
                </dd>
              </dl>
              <button contenteditable="d-inline-block" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Apply Now
              </button>
              <% if(UserEmail){ %>
              <form class="d-inline-block" action="/jobs/update/<%=job.id %>" method="get">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i>
                </button>
              </form>
              <form class="d-inline-block" action="/jobs/<%=job.id%>?_method=DELETE" method="post">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i>
                </button>
              </form> 
             <% } %>
            </div>
          </div>
    </div>

 
</section>


<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/apply/<%=job.id %>" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label  class="form-label">Name</label>
            <input type="text" name="name" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-3">
            <label  class="form-label">Contact</label>
            <input type="text" name="contact" class="form-control">
          </div>
          <div class="mb-3">
            <label for="formFile" class="form-label">Upload resume</label>
            <input class="form-control" name="file" type="file" id="formFile" required>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>